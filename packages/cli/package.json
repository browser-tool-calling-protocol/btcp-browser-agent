{
  "name": "@btcp/cli",
  "version": "0.1.0",
  "description": "Browser-based CLI for browser automation - runs in Chrome extension",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./terminal": {
      "types": "./dist/terminal/index.d.ts",
      "import": "./dist/terminal/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "browser",
    "automation",
    "cli",
    "chrome-extension"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "@btcp/extension": "file:../extension"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "typescript": "^5.3.0"
  }
}
